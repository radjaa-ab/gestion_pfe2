{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es6"],
      "module": "commonjs",
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "frontend/**/*",
      "backend/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  